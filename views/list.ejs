<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title><%= kindOfDay %></title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="css/styles.css">
    </head>
    <body>
        <div class="box" id="heading">
        <p style="color:blueviolet">It is <%= kindOfDay %> my dudes</p>
        </div>
        <div class="box">
            <% for (var i=0; i<itemsList.length; i++){ %>
                <form action="/delete", method="post">
                    <div class="item">
                        <input type="checkbox" onChange="this.form.submit()" name="deletedItem" value="<%=itemsList[i]._id%>" />
                        <p> <%= itemsList[i].name %> </p>
                    </div>
                </form>
            <% } %>
            <form action="/" method="post">
                <input type="text" id="nextItem" name="nextItem" placeHolder="Baga" autocomplete="off">
                <button type="submit" value="Adauga"> + </button>
            </form>
        </div>
    
        <!--[if lt IE 7]>
            <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="#">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->
        
        <script src="" async defer></script>
    </body>
</html>